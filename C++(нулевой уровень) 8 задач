Задача №1
#include <iostream>

int main()
{
    float a, b; // ширина и длина прямоугольника 
    float S; //площадь прямоугольника
    std::cout << "Введите длину прямоугольника: ";
    std::cin >> a;
    std::cout << "Введите ширину прямоугольника: ";
    std::cin >> b;
    std::cout << "Длина прямоугольника: ";
    std::cout << a;
    std::cout << "  ";
    std::cout << "Ширина прямоугольника: ";
    std::cout << b;
    return 0;
}
Задача №2
#include <iostream>

int main()
{
    float funt; // вес фунт
    float kg; //вес кг
    std::cout << "Введите вес в фунтах: ";
    std::cin >> funt;
    std::cout << "вес в фунтах: ";
    std::cout << funt;
    return 0;
}
Задача №3
int main()
{
    float summa; // сумма вклада
    int srok; //срок вклада
    int stavka; //процентная ставка
    float dohod; // сумма дохода
    std::cout <<"Введите сумма вклада: ";
    std::cin >> summa;
    std::cout << "Введите срок вклада: ";
    std::cin >> srok;
    std::cout << "Введите процентная ставка: ";
    std::cin >> stavka;
    std::cout << "сумма вклада: ";
    std::cout << summa;
    std::cout << " срок вклада: ";
    std::cout << srok;
    std::cout << " процентная ставка: ";
    std::cout << stavka;
    return 0;
}
Задание №4
