float sopr( float r1, float r2, int t)
{
    // r1,r2 - ¢¥«¨ç¨ë á®¯à®â¨¢«¥¨©
    // t - â¨¯ á®¥¤¨¥¨ï:
    //     1 - ¯®á«¥¤®¢ â¥«ì®¥;
    //     2 - ¯ à ««¥«ì®¥.
    // ¥á«¨ â¨¯ á®¥¤¨¥¨ï ãª §  ¥¢¥à®,
    // â® äãªæ¨ï ¢®§¢à é ¥â -1
    float r;
    if ( t==1)  r =  r1 + r2;
    else if (t== 2)  r = r1*r2/(r1+r2);
            else r = -1;
    return(r);
}
